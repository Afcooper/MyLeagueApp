<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
android:background="@android:color/holo_green_light">


    <EditText
            android:background="@drawable/rounded_edittext_register_login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/activity_login_textview_email" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@android:color/darker_gray" android:hint="  Email"/>
    <EditText
            android:background="@drawable/rounded_edittext_register_login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/activity_login_textview_password" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_textview_email"
            app:layout_constraintStart_toStartOf="@+id/activity_login_textview_email"
            app:layout_constraintEnd_toEndOf="@+id/activity_login_textview_email"
            android:hint="  Password"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/activity_login_button_login" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_textview_password" app:layout_constraintStart_toStartOf="@+id/activity_login_textview_password"
            app:layout_constraintEnd_toEndOf="@+id/activity_login_textview_password" android:background="@drawable/rounded_button"
            android:textColor="@android:color/white" android:textSize="16sp" android:textStyle="bold"/>
    <TextView
            android:text="Back to Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_login_textview_register" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_button_login" app:layout_constraintStart_toStartOf="@+id/activity_login_button_login"
            app:layout_constraintEnd_toEndOf="@+id/activity_login_button_login" android:textColor="@android:color/white"
            android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>