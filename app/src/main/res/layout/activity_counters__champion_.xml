<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_light"
        tools:context=".Counters_Champion_Activity">


        <ImageView
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/activity_counters_champion_champion_image2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintDimensionRatio="1:1"
                tools:src="@tools:sample/avatars" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:gravity="center"
                android:background="@drawable/blackcleaver"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/activity_counters_champion_build_recommended"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/activity_counters_champion_champion_image2"
                app:layout_constraintDimensionRatio="16:9"
                android:text="Recommended Build" android:textSize="36sp" android:textStyle="bold"
                android:textColor="@color/colorAccent"/>
        <TextView
                android:gravity="center"
                android:background="@drawable/runes"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/activity_counters_champion_runes_recommended"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintDimensionRatio="16:9"
                android:text="Recommended Runes" android:textSize="36sp" android:textStyle="bold"
                android:textColor="@android:color/holo_green_light" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/activity_counters_champion_build_recommended"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/activity_counters_champion_description" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/activity_counters_champion_runes_recommended"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:textColor="@android:color/black" android:textSize="30sp"
                android:textStyle="bold"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>