<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_light"
        tools:context=".MainActivity">

    <EditText
            android:background="@drawable/rounded_edittext_register_login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/activity_main_textview_username" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Username"
            android:paddingLeft="16dp"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="228dp"
            app:layout_constraintTop_toTopOf="parent" android:textColor="@android:color/darker_gray"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:paddingLeft="16dp"
            android:background="@drawable/rounded_edittext_register_login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/activity_main_textview_email" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_main_textview_username"
            app:layout_constraintEnd_toEndOf="@+id/activity_main_textview_username"
            app:layout_constraintStart_toStartOf="@+id/activity_main_textview_username"
            android:textColor="@android:color/darker_gray" android:hint="Email"/>
    <EditText
            android:background="@drawable/rounded_edittext_register_login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:paddingLeft="16dp"
            android:id="@+id/activity_main_textview_password"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_main_textview_email"
            app:layout_constraintStart_toStartOf="@+id/activity_main_textview_email"
            app:layout_constraintEnd_toEndOf="@+id/activity_main_textview_email"
            android:textColor="@android:color/darker_gray" android:hint="Password"/>
    <Button
            android:text="Register"
            android:background="@drawable/rounded_button_gray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_main_button_register" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_main_textview_password"
            app:layout_constraintStart_toStartOf="@+id/activity_main_textview_password"
            app:layout_constraintEnd_toEndOf="@+id/activity_main_textview_password" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <TextView
            android:text="Already have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_main_account_textview" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_main_button_register" app:layout_constraintStart_toStartOf="@+id/activity_main_button_register"
            app:layout_constraintEnd_toEndOf="@+id/activity_main_button_register" android:textColor="@android:color/white"
            android:textSize="18sp" android:textStyle="bold"/>
    <Button
            android:text="Select Photo"
            android:textColor="@android:color/white"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_button"
            android:id="@+id/activity_main_button_selectphoto" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>