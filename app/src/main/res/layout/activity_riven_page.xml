<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        tools:context=".RivenPage">

    <Button
            android:id="@+id/riven_abilities_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rivenabilities"
            android:text="Abilities"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/riven_page_bottomdivider"
            app:layout_constraintEnd_toStartOf="@+id/riven_page_middledivider"
    />
    <Button
            android:id="@+id/runes_2018_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/runes"
            android:text="Runes"
            android:textColor="@android:color/holo_red_light"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/riven_page_middledivider"
            app:layout_constraintTop_toBottomOf="@+id/riven_page_TopDivider"
            app:layout_constraintBottom_toTopOf="@+id/riven_page_bottomdivider"/>

    <Button
            android:id="@+id/riven_builds_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/blackcleaver"
            android:text="Builds"
            android:textColor="@android:color/darker_gray"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/riven_page_middledivider"
            app:layout_constraintBottom_toTopOf="@+id/riven_page_TopDivider"/>

    <Button
            android:id="@+id/riven_counters_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/garen"
            android:text="Counters"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="32sp"
            android:gravity="fill_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/riven_gameplay_button"
            app:layout_constraintStart_toEndOf="@+id/riven_page_middledivider"
            app:layout_constraintBottom_toTopOf="@+id/riven_page_bottomdivider"/>

    <Button
            android:id="@+id/riven_gameplay_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/riven"
            android:text="GamePlay"
            android:gravity="bottom"
            android:textColor="@android:color/darker_gray"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/riven_page_TopDivider"
            app:layout_constraintStart_toEndOf="@+id/riven_page_middledivider"
    />

    <Button
            android:id="@+id/riven_animation_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/dawnbringer_riven"
            android:text="Animation Cancels"
            android:gravity="bottom"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/riven_page_middledivider"
            app:layout_constraintTop_toBottomOf="@+id/riven_page_bottomdivider"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:id="@+id/riven_page_middledivider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/black"
    />
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/riven_page_TopDivider" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.32999998"
            android:background="@android:color/black"/>
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/riven_page_bottomdivider" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.65999997"
            android:background="@android:color/black"/>

</android.support.constraint.ConstraintLayout>