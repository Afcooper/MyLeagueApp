<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:id="@+id/backgroundid"
>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100sp"
            android:layout_height="100sp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/runes_row_image" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/runes_row_title"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/runes_row_image"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/runes_row_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="4dp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:textSize="14dp"
            android:layout_height="wrap_content"
            android:id="@+id/runes_row_description" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/runes_row_title"
            app:layout_constraintStart_toEndOf="@+id/runes_row_image" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.49"
    />
    <View
            android:layout_width="0dp"
            android:layout_height=".5sp"
            android:background="@android:color/black"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>